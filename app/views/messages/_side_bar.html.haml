.side-bar
  .side-bar__header
    .side-bar__header__user-box
      .side-bar__header__user-box__name
        = current_user.name
      .side-bar__header__user-box__edit
        = link_to new_group_path do
          = icon('fas', 'pen-square', class: 'side-bar__header__user-box__edit__icons')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'side-bar__header__user-box__edit__icons')
  .side-bar__footer
    - current_user.groups.each do |group|
      .side-bar__footer__group
        .side-bar__footer__group__group-name__id
          = link_to group_messages_path(group.id),class:"side-bar__footer__group__group-name" do
            = group.name
        .side-bar__footer__group__message-name
          = group.show_last_message